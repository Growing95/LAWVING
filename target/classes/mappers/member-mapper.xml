<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="memberMapper">

	<resultMap type="Member" id="resultMember">
		<id property="idx" column="members_idx"/>
		<result  property="id" column="members_id"/>
		<result  property="pw" column="members_pw"/>
		<result  property="name" column="members_name"/>
		<result  property="eamil" column="members_email"/>
		<result  property="birth" column="members_birth"/>
		<result  property="tel" column="members_tel"/>
		<result  property="lev" column="members_lev"/>
		<result  property="reg" column="members_reg"/>
	</resultMap>
	

	<select id="selectCheckId" parameterType="string" resultType="int">
		select count(id) from members where id=#{id}
	</select>
	<insert id="insertMember" parameterType="Member">
		insert into members values(members_seq.nextval,#{id},#{pw},#{name},#{email},#{birth},#{tel},#{lev},sysdate)
	</insert>
	<select id="selectMember" parameterType="string" resultMap="resultMember">
		select * from members where id=#{id}
	</select> 
</mapper>



















